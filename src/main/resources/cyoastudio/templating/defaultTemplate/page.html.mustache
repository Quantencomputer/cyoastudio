<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8"> 
	<title>CYOA</title>
	<style>
		{{{style}}}
	</style>
	<style>
		{{{customCss}}}
	</style>
</head>
<body>
	{{#title}}
	<h1>{{{title}}}</h1>
	{{/title}}
	{{#sections}}
	<section id="{{{id}}}" class="{{{classes}}}">
		{{#title}}
		<h2>{{{title}}}</h2>
		{{/title}}
		{{#description}}
		<div class="section-description description">
			{{{description}}}
		</div>
		{{/description}}
		<div class="options {{imageClass}} row{{numPerRow}}">
			{{#options}}
			<div id="{{{id}}}" class="option {{{classes}}}">
				{{#image}}
				<img src="{{image}}"/>
				{{/image}}
				{{#title}}
				<h3>{{{title}}}</h3>
				{{#rollRange}}
				<div class="roll">{{{rollRange}}}</div>
				{{/rollRange}}
				{{/title}}
				{{#description}}
				<div class="option-description description">
					{{#cost}}
					<p class="cost">Cost: {{{cost}}}</span>
					{{/cost}}
					{{{description}}}
				</div>
				{{/description}}
			</div>
			{{/options}}
		</div>
	</section>
	{{/sections}}
</body>
</html>
